<% include ../partials/header %>

<div class="container mt-5">    
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Yelp Camp</p>
            <ul class="list-group">
                <li class="list-group-item active">Cras justo odio</li>
                <li class="list-group-item">Dapibus ac facilisis in</li>
                <li class="list-group-item">Morbi leo risus</li>                
            </ul>
        </div>
        <div class="col-md-9">
            <div class="card">
                <img class="card-img-top rounded" src="<%= campground.image %>" alt="<#= campground.name %>">
                <div class="card-body">
                    <h5 class="float-right">$9.99/night</h5>
                    <h5 class="card-text font-weight-bold text-info"> 
                        <a href="#"><%= campground.name %></a>
                    </h5>
                    <p class="card-text"><%= campground.description %></p>
                </div>
            </div>
            <div class="card mt-3">
                <div class="card-footer">
                    <div class="row justify-content-end">
                        <a href="/campgrounds/<%= campground._id%>/comments/new" class="btn btn-success btn-sm">Add New Comment</a>
                    </div>
                    <hr>
                    <% campground.comments.forEach(function(comment){%>
                        <div class="row">
                            <div class="col-md-12">
                                <strong><%= comment.author%></strong>
                                <span class="float-right">10 days ago</span>
                                <p><%= comment.text%></p>
                            </div>
                        </div>
                        
                    <%});%>
                </div>
            </div>

        </div>
    </div>
    
</div>



<% include ../partials/footer %>